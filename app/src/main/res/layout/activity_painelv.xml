<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PainelV">

    <Button
        android:id="@+id/btnCadProd"
        android:layout_width="231dp"
        android:layout_height="47dp"
        android:layout_marginBottom="48dp"
        android:text="CADASTRAR PRODUTO"
        app:layout_constraintBottom_toTopOf="@+id/btnVendasEfetuadas"
        app:layout_constraintEnd_toEndOf="@+id/btnVendasEfetuadas"
        app:layout_constraintStart_toStartOf="@+id/btnVendasEfetuadas"
    />


    <Button
        android:id="@+id/btnVendasEfetuadas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:text="VENDAS EFETUADAS"
        app:layout_constraintBottom_toTopOf="@+id/btnChecarProduto"
        app:layout_constraintEnd_toEndOf="@+id/btnChecarProduto"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/btnChecarProduto"
    />

    <Button
        android:id="@+id/btnChecarProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="340dp"
        android:text="CHECAR ENVIO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
    />

    <TextView
        android:id="@+id/nomeDoApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="PAINEL DO VENDEDOR"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>